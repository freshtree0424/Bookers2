 <% if @book.errors.any? %>
 <div class="error-message">
  <h3><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>


<div>
  <h3><%= user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <%= @user.introduction %>
    <p class="edit-item">
     <%= link_to edit_user_path(@user) do %>
     <i class="fa-solid fa-wrench"></i>
     <% end %>
    </p>
</div>

 <h2>New book</h2>

<%= form_with model: @book, url: '/books', method: :post do |f| %>

 <h4>本のタイトル</h4>
 <%= f.text_field :title, value: '' %>

 <h4>感想</h4>
 <%= f.text_area :body, value: '' %>

<%= f.submit 'Create Book', style:"width: 134px; height: 30px; padding: 1px 6px; border: 1px solid black; border-radius: 3px;" %>

 <% end %>