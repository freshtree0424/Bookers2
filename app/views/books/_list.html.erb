
<table>
  <tr><th><%= image_tag user.get_profile_image(100,100) %></th></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
</table>

<div class='row'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>

<h4>New book</h4>
   <%= form_with model: @book, url: '/books', method: :post do |f| %>
   <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, value: "", class: 'form-control book_title' %>
   </div>
   <div class="form-group">
    <%= f.label :opinion %>
    <%= f.text_area :body, value: "", class: 'form-control book_body' %>
   </div>
   <div class="form-group">
    <%= f.submit "Create Book", method: :post, class: 'btn btn-success' %>
   </div>
   <% end %>