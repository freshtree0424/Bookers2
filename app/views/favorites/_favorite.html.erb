 <% if book.favorited_by?(current_user) %>
    <%= link_to book_favorite_path(book), method: :delete, local: false do %>
      ♥<%= book.favorites.count %>
    <% end %>
<% else %>
    <%= link_to book_favorite_path(book), method: :post, local: false do %>
      ♡<%= book.favorites.count %>
    <% end %>
<% end %>