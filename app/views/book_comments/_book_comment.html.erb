<table class='table'>
 <tbody>
 <% book.book_comments.each do |book_comment| %>
   <tr>
     <td><%= link_to user_path(book_comment.user) do %>
         <%= image_tag book_comment.user.get_profile_image, size:"100x100" %>
         <%= book_comment.user.name %>
        <% end %>
     </td>
     <td><%= book_comment.comment %></td>
     <% if book_comment.user == current_user %>
     <td><%= link_to "Destroy", book_book_comment_path(book, book_comment), method: :delete, class: "btn btn-sm btn-danger", remote: true %></td>
     <% end %>
   </tr>
 <% end %>
 </tbody>
</table>