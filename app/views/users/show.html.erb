<%= render 'books/list', user: @user %>

<h1>Books</h1>

<table>
  <tr>
   <th></th>
   <th>本のタイトル</th>
   <th>感想</th>
  </tr>

  <% @books.each do |book| %>
  <tr>
    <td><%= link_to user_path(@user.id) do %>
        <%= image_tag @user.get_profile_image(100,100) %>
        <% end %>
    </td>
    <td> <%= link_to book.title, book_path(book.id) %> </td>
    <td> <%= book.body %> </td>
  </tr>
  <% end %>
</table>

